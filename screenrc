# -*- mode: sh -*-

# this is mostly from here:
# https://github.com/mikewest/homedir/blob/master/.screenrc

# use local shell by default, and make it a login shell
shell -$SHELL

# New Messages
activity    "%c activity in %n (%t) [%w:%s]~"
bell        "%c bell -> %n%f %t^G"
vbell_msg   " *beep* "

# We're xterm-color
# TODO: make this conditional
term xterm-color

# Generic Config
vbell               on      # No annoying audible bell, using "visual bell"
autodetach          on      # Automatically detach screens on hangup
startup_message     off     # You know what screen is, right?
defutf8             on      # Default to UTF-8
nonblock            on      # Don't let hung windows bring down the whole session
defscrollback       10000    # Biiiiig buffer.

pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."

hardstatus alwayslastline
# {=blackGREEN} [ {GREEN} $HOSTNAME {green} ][ <center> {=blackwhite} <if>$BEFORE_WINDOWS</if> {red}({WHITE}$WINDOW_NUMBER*$FLAGS$TITLE<if>($USER)</if>{red}){white}<if>$AFTER_WINDOWS</if> </center> ][ {BLUE}$YEAR-$month-$day {WHITE}HH:MM24 {green}]s
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{=kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][ %{B}%Y-%m-%d %{g}]'

# Shortcuts
bindkey -k F5 next
bindkey -k F3 prev

# I never background processes, so unblock ^A
escape ^zZ

# try and local local .screenrc for local mods
source $HOME/.localscreenrc
