# -*- mode: conf-unix -*-
[alias]
	st = status -sb
	ci = commit
	co = checkout
	br = branch
#	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	hist = log --pretty=format:\"%h %ai | %s%d [%an]\" --graph --date=short
        l = log --decorate --name-status
	type = cat-file -t
	dump = cat-file -p
	svnup = svn fetch
	sup = svn fetch
	svnci = svn dcommit
	sci = svn dcommmit
	up = pull --rebase
	sreb = svn rebase
	srt = svn rebase remotes/trunk
	srebt = svn rebase remotes/trunk
	reb = rebase
[user]
	name = James Abley
	email = james.abley@gmail.com
[branch]
        autosetuprebase = always
[core]
	autocrlf = input
	safecrlf = true
 excludesfile = /opt/boxen/config/git/gitignore
[color]
	ui = true
        status = auto
        diff = auto
        branch = auto
        showbranch = auto
[push]
	default = upstream
# alias some common Git origins/endpoints
# http://www.kernel.org/pub/software/scm/git/docs/git-clone.html
[url "git@github.com:"]
        insteadOf = "gh:"
        pushInsteadOf = "github:"
        pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
        insteadOf = "github:"
[url "git@gist.github.com:"]
        insteadOf = "gst:"
        pushInsteadOf = "gist:"
        pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
        insteadOf = "gist:"
[credential]
        helper = /opt/boxen/bin/boxen-git-credential
# local overrides - git 1.7.10 or higher
# http://stackoverflow.com/a/9733277
[include]
    path = ~/.localgitconfig

[hub]
protocol = https
host = github.gds
