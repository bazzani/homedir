# -*- mode: sh -*-

# ~/etc/bash/init/source_or_warn
#
# source a file, echoing a warning if it doesn't exist

function source_or_warn {
    file=${1}

    if [ -f ${file} ]; then
        source ${file}
    else
        [ ${interactive} ]  && print "${bold}${red}${file} does not exist${reset}"
    fi
}


function source_if_exists {
    file=${1}

    if [ -f ${file} ]; then
        source ${file}
    fi
}
